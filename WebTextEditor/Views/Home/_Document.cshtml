<script type="text/ng-template" id="editor.document.html">

    <div class="row">
        <div class="col-md-8">
            <h2>{{vm.document.name}}</h2>
        </div>
        <div class="col-md-4">
            <h4>Caret position: {{caretPosition.get}}</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form class="editor">
                <textarea id="editor" class="form-control input-lg" rows="10" ng-model="vm.document.text" e-caret="caretPosition"></textarea>
                <div class="carets" ng-repeat="(name, value) in vm.collaborators">
                    <div e-input-element="#editor"
                         e-input-caret="value.caret"
                         e-caret-name="{{name}}"
                         e-caret-color="{{value.color}}" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <h3 class="nopadding">Collaborators</h3>
            <div ng-repeat="(name, value) in vm.collaborators">
                <div class="bs-callout" ng-style="{'border-left-color': value.color}">
                    <h5>{{name}}</h5>
                </div>
            </div>
        </div>
    </div>

</script>